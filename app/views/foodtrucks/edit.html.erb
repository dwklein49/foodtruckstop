<h1>Edit Your Food Truck Information</h1>

<h1><%= @foodtruck.truck_name %></h1>
<h3><%= @foodtruck.type_of_food %></h3>
<h3><%= @foodtruck.sample_item %> </h3>
<h3> <%= @foodtruck.website %> </h3>
<h3> <%= @foodtruck.twitter %>

<%= form_for @foodtruck do |f| %>
  <%= f.label :truck_name %>
  <%= f.text_field :truck_name %>

  <%= f.label :type_of_food%>
  <%= f.text_field :type_of_food %>

  <%= f.label :sample_item %>
  <%= f.text_field :sample_item %>

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.label :twitter %>
  <%= f.text_field :twitter %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit "Save" %>
<% end %>
